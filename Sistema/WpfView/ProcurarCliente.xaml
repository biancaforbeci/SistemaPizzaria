<Window x:Class="WpfView.ProcurarCliente"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfView"
        mc:Ignorable="d"
        Title="ProcurarCliente" Style="{StaticResource estiloJanela}">
    <Grid>
        <Canvas HorizontalAlignment="Left" Height="380" Margin="10,10,0,0" VerticalAlignment="Top" Width="650">
            <TextBlock Text="Telefone" Width="68" FontSize="16" FontFamily="Arial" Canvas.Left="45" Canvas.Top="20"/>
            <TextBlock/>
            <TextBox x:Name="txtNome" Width="194" Canvas.Left="135" Canvas.Top="9" Height="29" />
            <DataGrid Height="316" Canvas.Left="13" Canvas.Top="54" Width="627"/>
            <Button x:Name="btnProcura" Content="Procurar"  Width="121" Height="26" Click="Button_Click" Canvas.Left="370" Canvas.Top="12"/>
            <Button x:Name="btnProcuraID" Content="Procurar por ID" Width="121" Height="26" Canvas.Left="519" Canvas.Top="12" Click="ProcuraID" />
        </Canvas>

    </Grid>
</Window>
