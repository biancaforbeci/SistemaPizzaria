<Window x:Class="WpfView.FazerPedido"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfView"
        mc:Ignorable="d"
        Title="FazerPedido" Style="{StaticResource estiloJanela}">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" ></ColumnDefinition>
            <ColumnDefinition Width="*" ></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <TextBox HorizontalAlignment="Left" Height="23" Margin="38,87,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Label Content="Cliente" HorizontalAlignment="Left" Margin="63,54,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.557,1.265" FontFamily="Arial" FontSize="16"/>
        <DataGrid HorizontalAlignment="Left" Height="228" VerticalAlignment="Top" Width="364" Margin="63,129,0,0"/>
        <Label Content="Número Pedido" HorizontalAlignment="Left" Margin="316,54,0,0" VerticalAlignment="Top" FontFamily="Arial" FontSize="16"/>
        <TextBox HorizontalAlignment="Left" Height="23" Margin="318,87,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Button Content="Mostrar pizzas" HorizontalAlignment="Left" VerticalAlignment="Top" Width="116" Margin="180,72,0,0" Height="38" FontFamily="Arial" FontSize="16"/>
        <Label Content="Pedido" HorizontalAlignment="Left" Margin="201,6,0,0" VerticalAlignment="Top" Width="139" FontFamily="Arial" FontSize="24" FontWeight="Bold"/>
        <Label Content="Valor Total" Grid.Column="1" HorizontalAlignment="Left" Margin="69,67,0,0" VerticalAlignment="Top" FontFamily="Arial" FontSize="16"/>
        <TextBox Grid.Column="1" HorizontalAlignment="Left" Height="23" Margin="52,114,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Button Content="Cancelar Pedido" Grid.Column="1" HorizontalAlignment="Left" Margin="36,310,0,0" VerticalAlignment="Top" Width="136" Height="47" FontFamily="Arial" FontSize="16"/>
        <Button Content="Confirmar Pedido" Grid.Column="1" HorizontalAlignment="Left" Margin="36,180,0,0" VerticalAlignment="Top" Width="136" Height="48" FontFamily="Arial" FontSize="16"/>





    </Grid>
</Window>
